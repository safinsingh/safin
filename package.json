{
	"name": "safin",
	"version": "0.1.0",
	"description": "A CLI to display information about myself",
	"keywords": [
		"github"
	],
	"main": "dist/index.js",
	"bin": {
		"safin": "dist/index.js"
	},
	"homepage": "https://github.com/safinsingh/safin",
	"license": "AGPL-3.0",
	"author": {
		"name": "Safin Singh",
		"email": "safinsingh.dev@gmail.com",
		"url": "https://safin.dev"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/safinsingh/safin"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "[ -d \"dist\" ] && rm -rf dist; tsc",
		"start": "ts-node src/index.ts",
		"dev": "ts-node-dev src/index.ts",
		"fmt": "prettier --write '**/*.{js,ts,tsx,yml,scss,json}'",
		"fmt:ci": "prettier --check '**/*.{js,ts,tsx,yml,scss,json}'",
		"lint": "eslint '**/*.{js,ts,tsx}' --fix",
		"lint:ci": "eslint '**/*.{js,ts,tsx}'",
		"postinstall": "husky install"
	},
	"devDependencies": {
		"@types/eslint": "^7.2.6",
		"@types/prettier": "^2.1.6",
		"eslint": "^7.19.0",
		"eslint-config-canonical": "^25.8.13",
		"eslint-config-prettier": "^7.2.0",
		"eslint-import-resolver-typescript": "^2.3.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "5",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.1",
		"typescript": "^4.1.3"
	}
}
