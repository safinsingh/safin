{
	"compilerOptions": {
		"lib": ["ESNext", "dom"],
		"target": "es5",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"rootDir": "src/",
		"outDir": "dist/"
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
